<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentsHelper.Views.Tasks.AddTaskPage"
             xmlns:sys="clr-namespace:System;assembly=System.Runtime"
             HideSoftInputOnTapped="True"
             Title="Vytvořit nový úkol">
    <ContentPage.ToolbarItems>
        <ToolbarItem Command="{Binding AddTaskCommand}" IconImageSource="{StaticResource SaveIcon}" Clicked="AddTask_Clicked" />
    </ContentPage.ToolbarItems>
    <Grid>
        <ScrollView x:Name="MainScrollView">
            <Grid Margin="10" IsVisible="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Entry x:Name="TitleEntry" Text="{Binding Title}" TextChanged="Entry_TextChanged" Style="{StaticResource TaskName}" />
                <Border Grid.Row="1" Style="{StaticResource CRUDBorder}" />
                <Editor x:Name="ContentEditor" Text="{Binding Description}" Grid.Row="2" Style="{StaticResource TaskDescription}" />
                <Border Grid.Row="3" Style="{StaticResource CRUDBorder}" />
                <FlexLayout Grid.Row="4" Style="{StaticResource TaskFlexLayout}">
                    <Label Text="Vyberte datum a čas splnění:"  Style="{StaticResource CenteredLabel}" />
                    <HorizontalStackLayout Spacing="5">
                        <DatePicker Format="d. M. yyyy" Date="{Binding DueDate}" MinimumDate="{x:Static sys:DateTime.Now}" FontSize="16" />
                        <TimePicker Format="H:mm" Time="{Binding SelectedTime}" FontSize="16" />
                    </HorizontalStackLayout>
                </FlexLayout>
                <Button Grid.Row="5" Text="Připojit fotky" Clicked="AddPhotos_Clicked" Style="{StaticResource AddPhotoButton}" />
                <Grid Grid.Row="6" Margin="10" IsVisible="{Binding IsPhotoVisible}">
                    <CarouselView x:Name="CarouselView" ItemsSource="{Binding Photos}" CurrentItem="{Binding SelectedPhoto}" Style="{StaticResource TaskCarousel}">
                        <CarouselView.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding ., Converter={StaticResource FilePathToImageSourceConverter}}" />
                            </DataTemplate>
                        </CarouselView.ItemTemplate>
                    </CarouselView>
                    <Border Style="{StaticResource TaskBorder}">
                        <HorizontalStackLayout Margin="5" Padding="5" Spacing="5">
                            <Image Source="{StaticResource ImageCarouselIcon}" />
                            <Label Text="{Binding CarouselStatus}" TextColor="{StaticResource MainHelperColorLight}" />
                        </HorizontalStackLayout>
                    </Border>
                    <Button Command="{Binding RemovePhotoCommand}" Style="{StaticResource RemovePhotoButton}" ImageSource="{StaticResource CrossIcon}" />
                </Grid>
            </Grid>
        </ScrollView>
        <VerticalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" IsVisible="{Binding IsBusy}" Spacing="5">
            <ActivityIndicator Color="{StaticResource MainHelperColor}" IsRunning="True" />
            <Label Text="{StaticResource SavingData}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>