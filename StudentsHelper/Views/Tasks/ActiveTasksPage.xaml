<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentsHelper.Views.Tasks.ActiveTasksPage"
             Title="Aktivní úkoly">
    <Grid>
        <ScrollView x:Name="MainScrollView" IsVisible="{Binding IsBusy, Converter={StaticResource InverseBooleanConverter}}">
            <Grid>
                <CollectionView x:Name="MainCollectionView" ItemsSource="{Binding PendingTasks}" SelectionMode="None" IsVisible="False">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <VerticalStackLayout Margin="10">
                                <Label Text="{Binding Title}" />
                                <Label Text="{Binding DateDue, Converter={StaticResource DateTimeToFormattedStringConverter}, ConverterParameter={StaticResource IsDateAndTime}}" />
                                <Label Text="{Binding Photos, Converter={StaticResource IListToCountConverter}}" />
                            </VerticalStackLayout>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <VerticalStackLayout IsVisible="False" x:Name="EmptyLayout" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand">
                    <Label Text="Žádné aktivní úkoly nejsou k dispozici." Style="{StaticResource CenteredLabel}"  />
                </VerticalStackLayout>
            </Grid>
        </ScrollView>
        <VerticalStackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand" IsVisible="{Binding IsBusy}" Spacing="5">
            <ActivityIndicator Color="{StaticResource MainHelperColor}" IsRunning="True" />
            <Label Text="{StaticResource LoadingData}" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>