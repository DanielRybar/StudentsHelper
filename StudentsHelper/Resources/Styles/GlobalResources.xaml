<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:StudentsHelper.Converters">

    <!-- converters -->
    <conv:InverseBooleanConverter x:Key="InverseBooleanConverter" />
    <conv:DateTimeToFormattedStringConverter x:Key="DateTimeToFormattedStringConverter" />
    <conv:CollectionToCountConverter x:Key="CollectionToCountConverter" />
    <conv:DateTimeCheckToColorConverter x:Key="DateTimeCheckToColorConverter" ValidColor="{StaticResource Transparent}" InvalidColor="{StaticResource MainHelperColorLight}" />
    <conv:FilePathToImageSourceConverter x:Key="FilePathToImageSourceConverter" />

    <!-- strings -->
    <x:String x:Key="LoadingData">Načítání dat</x:String>
    <x:String x:Key="SavingData">Ukládání dat</x:String>
    <x:String x:Key="DeletingData">Mazání dat</x:String>
    
    <!-- booleans -->
    <x:Boolean x:Key="IsDateAndTime">True</x:Boolean>
    <x:Boolean x:Key="IsDateOnly">False</x:Boolean>

</ResourceDictionary>