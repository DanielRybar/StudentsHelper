        <Setter Property="AlignItems" Value="Center" />
        <Setter Property="Padding" Value="0,30,0,30" />
    </Style>

    <Style TargetType="Button" x:Key="AddPhotoButton">
        <Setter Property="BackgroundColor" Value="{StaticResource MainHelperColorLight}" />
        <Setter Property="TextColor" Value="{StaticResource White}" />
    </Style>

    <Style TargetType="Border" x:Key="TaskGalleryBorder">
        <Setter Property="MaximumHeightRequest" Value="150" />
        <Setter Property="MaximumWidthRequest" Value="150" />
