    </Style>

    <Style TargetType="Button" x:Key="RemovePhotoButton">
        <Setter Property="MaximumHeightRequest" Value="20" />
        <Setter Property="MaximumWidthRequest" Value="20" />
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
        <Setter Property="HorizontalOptions" Value="EndAndExpand" />
        <Setter Property="BackgroundColor" Value="{StaticResource MainHelperColorLight}" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <Style TargetType="Image" x:Key="RemoveButtonIcon">
        <Setter Property="HorizontalOptions" Value="EndAndExpand" />
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
        <Setter Property="HeightRequest" Value="15" />
        <Setter Property="WidthRequest" Value="15" />
        <Setter Property="Margin" Value="0,2.5,2.5,0" />
    </Style>

    <Style TargetType="CarouselView" x:Key="TaskCarousel">
        <Setter Property="IsSwipeEnabled" Value="True" />
        <Setter Property="IsScrollAnimated" Value="False" />
        <Setter Property="Loop" Value="False" />
        <Setter Property="VerticalScrollBarVisibility" Value="Never" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Never" />
        <Setter Property="Position" Value="0" />
    </Style>

    <Style TargetType="Border" x:Key="TaskBorder">
        <Setter Property="VerticalOptions" Value="StartAndExpand" />
        <Setter Property="HorizontalOptions" Value="EndAndExpand" />
        <Setter Property="BackgroundColor" Value="{AppThemeBinding Light={StaticResource MenuBackgroundColorLight}, Dark={StaticResource Black}}" />
        <Setter Property="StrokeThickness" Value="0" />
        <Setter Property="StrokeShape" Value="RoundRectangle 20,20,20,20" />
        <Setter Property="Margin" Value="10" />
    </Style>

    <Style TargetType="Label" x:Key="DetailTaskHeader" BasedOn="{StaticResource CenteredLabel}">
        <Setter Property="HorizontalTextAlignment" Value="Center" />
        <Setter Property="VerticalTextAlignment" Value="Center" />
        <Setter Property="FontAttributes" Value="Bold" />
        <Setter Property="FontSize" Value="Large" />
    </Style>

