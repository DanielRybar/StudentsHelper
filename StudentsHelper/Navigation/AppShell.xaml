<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="StudentsHelper.Navigation.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:StudentsHelper.Views"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    Shell.FlyoutBehavior="Flyout"
    Shell.BackgroundColor="{AppThemeBinding Light={StaticResource MainHelperColor}, Dark={StaticResource MainHelperColor}}"
    Shell.ForegroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"
    Shell.TitleColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource White}}"
    FlyoutBackgroundColor="{AppThemeBinding Light= {StaticResource MenuBackgroundColorLight}, Dark={StaticResource MenuBackgroundColorDark}}">

    <Shell.Behaviors>
        <toolkit:StatusBarBehavior StatusBarColor="{StaticResource MainHelperColorDark}" StatusBarStyle="LightContent" />
    </Shell.Behaviors>

    <Shell.FlyoutHeader>
        <StackLayout Padding="0,0,0,30">
            <Image Source="logo_dark.png" Style="{StaticResource ShellLogoStyle}" />
            <Label Text="Pomocník studenta" Style="{StaticResource ShellLabel}" FontFamily="PoppinsRegular" />
        </StackLayout>
    </Shell.FlyoutHeader>

    <FlyoutItem Title="Poznámky" Icon="{StaticResource NotesIcon}" Route="NotesPage">
        <ShellContent ContentTemplate="{DataTemplate views:NotesPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Úkoly" Icon="{StaticResource TasksIcon}" Route="TasksPage">
        <ShellContent ContentTemplate="{DataTemplate views:TasksPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Nastavení" Icon="{StaticResource SettingsIcon}" Route="SettingsPage">
        <ShellContent ContentTemplate="{DataTemplate views:SettingsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="O aplikaci" Icon="{StaticResource InfoIcon}" Route="AboutAppPage">
        <ShellContent ContentTemplate="{DataTemplate views:AboutAppPage}" />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <Label Text="© Daniel Rybář, 2024" Style="{StaticResource ShellLabel}" Padding="0,0,0,10"/>
    </Shell.FlyoutFooter>

</Shell>
